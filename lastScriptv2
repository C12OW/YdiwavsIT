-- Sidebar Tabs
local sidebar = Instance.new("Frame", main)
sidebar.Size = UDim2.new(0,150,1,-60)
sidebar.Position = UDim2.new(0,10,0,50)
sidebar.BackgroundTransparency = 1

local tabs = {"Player","Auto","Area","Utilities","Teleport"}
local currentTab
local tabFrames = {}
local function createTab(name)
    local tab = Instance.new("ScrollingFrame", main)
    tab.Name = name.."Tab"
    tab.Size = UDim2.new(1,-170,1,-60)
    tab.Position = UDim2.new(0,160,0,50)
    tab.BackgroundTransparency = 1
    tab.Visible = false
    tab.CanvasSize = UDim2.new(0,0,0,500)
    tab.AutomaticCanvasSize = Enum.AutomaticSize.Y
    tab.ScrollBarThickness = 6
    tabFrames[name] = tab
    return tab
end

for i,name in ipairs(tabs) do
    local btn = Instance.new("TextButton", sidebar)
    btn.Size = UDim2.new(1,-10,0,40)
    btn.Position = UDim2.new(0,0,0,(i-1)*45)
    btn.BackgroundColor3 = Color3.fromRGB(35,35,35)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.Gotham
    btn.Text = name
    btn.TextSize = 16
    Instance.new("UICorner", btn)
    btn.MouseButton1Click:Connect(function()
        if currentTab then currentTab.Visible = false end
        tabFrames[name].Visible = true
        currentTab = tabFrames[name]
    end)
end

-- ================= PLAYER TAB =================
local playerTab = createTab("Player")

-- Slider Function
local function createSlider(parent,text,min,max,default,callback,posY)
    local lbl = Instance.new("TextLabel", parent)
    lbl.Size = UDim2.new(0,180,0,25)
    lbl.Position = UDim2.new(0,0,0,posY)
    lbl.BackgroundTransparency = 1
    lbl.Text = text.." : "..tostring(default)
    lbl.TextColor3 = Color3.new(1,1,1)
    lbl.Font = Enum.Font.Gotham
    lbl.TextSize = 16

    local slider = Instance.new("Frame", parent)
    slider.Size = UDim2.new(0,180,0,20)
    slider.Position = UDim2.new(0,0,0,posY+25)
    slider.BackgroundColor3 = Color3.fromRGB(60,60,60)
    Instance.new("UICorner", slider)

    local handle = Instance.new("Frame", slider)
    handle.Size = UDim2.new(default/max,0,1,0)
    handle.BackgroundColor3 = Color3.fromRGB(0,150,255)
    Instance.new("UICorner", handle)

    local dragging = false
    handle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
        end
    end)
    handle.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
    slider.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local pos = math.clamp(input.Position.X - slider.AbsolutePosition.X,0,slider.AbsoluteSize.X)
            local val = (pos/slider.AbsoluteSize.X)*(max-min)+min
            handle.Size = UDim2.new(pos/slider.AbsoluteSize.X,0,1,0)
            lbl.Text = text.." : "..math.floor(val)
            callback(val)
        end
    end)
end

-- WalkSpeed Slider
createSlider(playerTab,"WalkSpeed",16,500,16,function(v) hum.WalkSpeed=v end,10)
-- JumpPower Slider
createSlider(playerTab,"JumpPower",50,500,50,function(v) hum.JumpPower=v end,80)
-- TimeSpeed Slider
local timeSpeed = 1
createSlider(playerTab,"TimeSpeed",0.1,10,1,function(v) timeSpeed=v end,150)

RunService.Heartbeat:Connect(function(delta)
    workspace.PhysicsSimulationRate = timeSpeed
end)

-- ================= AUTO TAB =================
local autoTab = createTab("Auto")
local autoFish,autoSell = false,false

local fishBtn = Instance.new("TextButton", autoTab)
fishBtn.Size = UDim2.new(0,220,0,40)
fishBtn.Position = UDim2.new(0,0,0,10)
fishBtn.Text = "üé£ Auto Fish (OFF)"
fishBtn.BackgroundColor3 = Color3.fromRGB(0,150,255)
fishBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", fishBtn)
fishBtn.MouseButton1Click:Connect(function()
    autoFish = not autoFish
    fishBtn.Text = autoFish and "üé£ Auto Fish (ON)" or "üé£ Auto Fish (OFF)"
    task.spawn(function()
        while autoFish do
            RFChargeFishingRod:InvokeServer(workspace:GetServerTimeNow())
            RFRequestFishingMinigameStarted:InvokeServer(0.5,0.9)
            REFishingCompleted:FireServer()
            task.wait(0.05/timeSpeed)
        end
    end)
end)

local delayBox = Instance.new("TextBox", autoTab)
delayBox.Size = UDim2.new(0,100,0,30)
delayBox.Position = UDim2.new(0,0,0,60)
delayBox.PlaceholderText = "Delay Sell (s)"
delayBox.BackgroundColor3 = Color3.fromRGB(40,40,40)
delayBox.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", delayBox)

local sellBtn = Instance.new("TextButton", autoTab)
sellBtn.Size = UDim2.new(0,180,0,40)
sellBtn.Position = UDim2.new(0,110,0,60)
sellBtn.Text = "üí∞ Auto Sell (OFF)"
sellBtn.BackgroundColor3 = Color3.fromRGB(0,200,100)
sellBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", sellBtn)
sellBtn.MouseButton1Click:Connect(function()
    autoSell = not autoSell
    sellBtn.Text = autoSell and "üí∞ Auto Sell (ON)" or "üí∞ Auto Sell (OFF)"
    task.spawn(function()
        while autoSell do
            local d = tonumber(delayBox.Text) or 30
            RFSellAllItems:InvokeServer()
            task.wait(d/timeSpeed)
        end
    end)
end)

